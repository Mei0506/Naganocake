<div class="container">
<h3>ログイン</h3><br>
<h4>会員の方はこちらからログイン</h4><br>

  <%= form_with model: @customer, url: new_customer_session_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

   <div class="field">
    <label class="col-lg-3">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
   </div>

   <div class="field">
    <label class="col-lg-3">パスワード</label>
    <%= f.password_field :password, autocomplete: "current-password" %>
   </div><br>

   <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
   </div><br>

   <div class="row">
    <div class="col-xs-5">
     <h5>会員登録がお済みでない方</h5><br>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
       <%= link_to "こちら", new_registration_path(resource_name) %>
       <strong>から新規登録を行ってください。</strong>
      <% end %>
     </div>
    </div>
  <% end %>
</div>
