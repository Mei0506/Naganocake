<div class="container">
 <div clas="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h3><strong>マイページ</strong></h3>
    <table class="table table-bordered table-condensed">
     <p>
      <strong class="information-link">登録情報</strong>
      <%= link_to "編集する", customers_infomation_edit_path, class="btn btn-success" %>
     </p>
     <tr>
      <td class="col-xs-2">氏名</td>
      <td><%= current_customer.last_name %>&nbsp;<%= current_customer.first_name %></td>
     </tr>

     <tr>
      <td class="col-xs-2">カナ</td>
      <td><%= current_customer.last_name_kana %>&nbsp;<%= current_customer.first_name_kana %></td>
     </tr>

     <tr>
      <td class="col-xs-2">郵便番号</td>
      <td><%= current_customer.postal_code %></td>
     </tr>

     <tr>
      <td class="col-xs-2">住所</td>
      <td><%= current_customer.address %></td>
     </tr>

     <tr>
      <td class="col-xs-2">電話番号</td>
      <td><%= current_customer.telephone_number %></td>
     </tr>

     <tr>
      <td class="col-xs-2">メールアドレス</td>
      <td><%= current_customer.email %></td>
     </tr>
    </table>

    <p>
     <strong>注文履歴</strong>
     <%= link_to "一覧を見る", customers_orders_path, class=" btn btn-info" %>
    </p>
  </div>
 </div>
</div>