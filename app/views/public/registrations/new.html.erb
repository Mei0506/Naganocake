<div class="container">
<h2>新規会員登録</h2>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row">
   <label class="col-lg-3">名前</label>
   <div class="col-llg-3">
     <%= f.text_field :last_name,autofocus: true, axutocomplete: "last_name", placeholder: "(姓)" %>
   </div>
   <div class="col-llg-3">
     <%= f.text_field :first_name,autofocus: true, autocomplete: "first_name", placeholder: "(名)" %>
   </div>
  </div><br>

  <div class="row">
   <label class="col-lg-3">フリガナ</label>
   <div class="col-llg-3">
    <%= f.text_field :last_name_kana,autofocus: true, autocomplete: "last_name_kana", placeholder: "(セイ)" %>
   </div>
   <div class="col-llg-3">
    <%= f.text_field :first_name_kana,autofocus: true, autocomplete: "first_name_kana", placeholder: "(メイ)" %>
   </div>
  </div><br>

  <div class="row">
   <label class="col-lg-3">メールアドレス</label>
   <div class="col-llg-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
   </div>
  </div><br>

  <div class="row">
   <label class="col-lg-3">郵便番号(ハイフンなし)</label>
   <div class="col-llg-3">
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %>
   </div>
  </div><br>

  <div class="row">
   <label class="col-lg-3">住所</label>
   <div class="col-llg-3">
    <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0" %>
   </div>
  </div><br>

  <div class="row">
   <label class="col-lg-3">電話番号(ハイフンなし)</label>
   <div class="col-llg-3">
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "0000000000" %>
   </div>
  </div><br>

  <div class="row">
   <label class="col-lg-3">パスワード
    <% if @minimum_password_length %>
     <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %></label>
    <div class="col-lg-3">
     <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div><br>

  <div class="row">
   <label class="col-lg-3">パスワード(確認用)</label>
   <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div><br>

  <div class="actions">
   <%= f.submit "新規登録", class: "btn btn-success" %>
  </div><br>

  <h2>既に登録済みの方</h2>
  <div class="col-sm-3">
   <%- if controller_name != 'sessions' %>
    <%= link_to "こちら", new_session_path(resource_name) %>
   <% end %>
   からログインしてください。
  </div>
 <% end %>
</div>