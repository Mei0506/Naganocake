<div class="container">
 <div class="row">
  <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
   <h3>商品一覧</h3>
   <%= link_to "＋", new_admin_item_path(@item), class: "btn btn-sm btn-light" %>
   <table class="table">
      <thead>
       <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ステータス</th>
        <th colspan="4"></th>
       </tr>
      </thead>

      <tbody>
      <% @items.each do |item| %>
       <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price.to_s(:delimited, delimiter: ',') %></td>
        <td>
          <% if item.is_selling == true %>
          販売中
          <% else %>
          販売停止中
          <% end %>
        </td>
       </tr>
       <% end %>
       <%= paginate @items %>
      </tbody>
   </table>
  </div>
 </div>
</div>