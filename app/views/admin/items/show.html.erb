<div class="container">
 <div class="row">
  <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
   <h3>商品詳細</h3>

   <%= image_tag @item.get_image %>
   <table>
    <tbody>
     <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
     </tr>

     <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
     </tr>

     <tr>
      <td>税込価格<br>
      （税抜価格）</td>
      <td><%= ( @item.add_tax_price.to_s(:delimited) %>(<%= @item.price %>)円</td>
     </tr>
    </tbody>
   </table>

   <%= link_to "編集", edit_admin_item_path(@item), class: "btn btn-sm btn-success" %>
   <% end %>
  </div>
 </div>
</div>