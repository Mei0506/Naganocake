<div class="container">
 <div class="row">
  <div class="col-xs-10 col-xs-offset-1">
   <%= form_with model: @customer, url: admin_customer_path do |f| %>
   <div class="col-xs-5">
    <h2><%= @customer.full_name %>さんの会員情報編集</h2>
   </div>
   
   <div class="col-xs-5 col-xs-offset-2">

      <tr>
       <th>会員ID</th>
       <td><%= @customer.id %></td>
      </tr>

    <div>
      <div class="col-sm-12">
       <%= f.label :"氏名", class: "col-sm-12 control-label", style: "margin: 10px;" %>
       <%= f.text_field :last_name, class: "last_name col-sm-4 form-control-static name", style: "margin: 10px;" %>
       <%= f.text_field :first_name, class: "first_name col-sm-4 form-control-static name", style: "margin: 10px;" %>
     </div>
     <div class="col-sm-12">
      <%= f.label :"フリガナ", class: "col-sm-12 control-label", style: "margin: 10px;" %>
      <%= f.text_field :last_name_kana, class: "last_name_kana col-sm-4 form-control-static name", style: "margin: 10px;" %>
      <%= f.text_field :first_name_kana, class: "first_name_kana col-sm-4 form-control-static name", style: "margin: 10px;" %>
     </div>
     <div class="col-sm-12">
       <%= f.label :"郵便番号", class: "col-sm-12 control-label", style: "margin: 10px;" %>
       <%= f.text_field :postal_code, class: "col-sm-4 form-control-static", style: "margin: 10px;" %>
     </div>
     <div class="col-sm-12">
      <%= f.label :"住所", class: "col-sm-12 control-label", style: "margin: 10px;" %>
      <%= f.text_field :address, class: "col-sm-12 form-control-static", style: "margin: 10px;" %>
     </div>
     <div class="col-sm-12">
      <%= f.label :"電話番号", class: "col-sm-12 control-label", style: "margin: 10px;" %>
      <%= f.text_field :telephone_number, class: "col-sm-4 form-control-static", style: "margin: 10px;" %>
     </div>
     <div class="col-sm-12">
      <%= f.label :"メールアドレス", class: "col-sm-12 control-label", style: "margin: 10px;" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-12 form-control-static", style: "margin: 10px;" %>
     </div>

     <div>
      <%= f.radio_button :is_deleted, "false" %>
      <%= f.label :is_deleted_false, "有効" %>

      <%= f.radio_button :is_deleted, "true" %>
      <%= f.label :is_deleted_true, "退会" %>
     </div>

    </div>

   <div class="actions col-sm-12">
    <%= f.submit'変更を保存', class: "btn btn-success" %>
   </div>
   <% end %>

  </div>
 </div>
</div>